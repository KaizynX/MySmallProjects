{
    "version": "2.0.0",
    "command": "gcc",
    "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-Wall",
        "-Wextra",
        "-fexec-charset=UTF-8",   // 处理mingw中文编码问题
        "-finput-charset=UTF-8",// 处理mingw中文编码问题
    ],    // 编译命令参数
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${fileDirname}"],
        "pattern": {
            "regexp": "^(.*)\\\\(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 2,
            "line": 3,
            "column": 4,
            "severity": 5,
            "message": 6
        }
    },
    "group": {
        "kind": "build",
        "isDefault": true
    }
}